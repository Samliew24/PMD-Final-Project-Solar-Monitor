<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.solarmonitorapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Solar Monitor App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SolarMonitorApp"
        android:hardwareAccelerated="true">

        <!-- Splash/Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SolarMonitorApp.Launcher"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Screens -->
        <activity android:name=".DashboardActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />

        <activity android:name=".RegisterActivity" />
        <activity android:name=".RealTimeEfficiencyActivity" />
        <activity android:name=".EnvironmentalImpactActivity" />
        <activity android:name=".PredictionActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".WeatherActivity" />
        <activity android:name=".ReportActivity" />

    </application>

</manifest>
